	number = {12},
	urldate = {2016-12-15},
	journal = {Plant, Cell \& Environment},
	author = {Salmon, Yann and Torres-Ruiz, José M. and Poyatos, Rafael and Martinez-Vilalta, Jordi and Meir, Patrick and Cochard, Hervé and Mencuccini, Maurizio},

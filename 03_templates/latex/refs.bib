@inproceedings{muller_sensible_2018,
	address = {Rehovot, Israel},
	title = {Sensible heat flux from the canopy of a semi-arid forest as an efficient non-evaporative cooling mechanism for the canopy},
	abstract = {As a result of climate change, forests in the semi-arid climate zone are expected to heat up considerably more than other surfaces due to high radiation exposure, lower albedo and the lack of evaporative cooling. Conversely, in spite of their lower albedo and increased radiation load resulting in a large sensible heat flux (a 'convector effect'), their surface was observed to be cooler than that of the non-forested areas surrounding them (Rotenberg \& Yakir 2010).
This paradox suggests the existence of efficient non-evaporative heat removal mechanisms that protect the biological functioning of dry forest ecosystems: Turbulence. 
We quantify the production of sensible heat within the forest canopy and show the efficiency of sensible heat removal through the contribution of the two main TKE production terms, buoyancy and mechanical shear, within the tree canopies as an efficient non-evaporative cooling mechanism.},
	publisher = {The Israel Society of Ecology \& Environmental Sciences},
	author = {Muller, Jonathan D. and Rotenberg, Eyal and Yakir, Dan},
	month = jun,
	year = {2018},
}


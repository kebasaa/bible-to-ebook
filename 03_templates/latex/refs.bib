	publisher = {John Wiley \& Sons, Ltd},
	author = {Jones, Hamlyn G. and Rotenberg, Eyal},
	year = {2001},
	keywords = {energy balance, solar radiation, temperature, thermal adaptations, thermal radiation, vegetation},

	note = {\_eprint: https://nph.onlinelibrary.wiley.com/doi/pdf/10.1111/nph.12321},
	keywords = {drought, mortality, seedlings, transpiration, vapor pressure deficit (VPD), water potential},
	pages = {366--374},
}

@article{grossiord_tree_2017,
	title = {Tree water dynamics in a drying and warming world},

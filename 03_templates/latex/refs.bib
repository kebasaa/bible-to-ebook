	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2435.13643},
	keywords = {elevation gradient, energy balance, leaf functional trait, leaf temperature, subalpine, thermal ecology},
	pages = {1882--1897},
}


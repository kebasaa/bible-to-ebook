	keywords = {carbon remobilization, carbon starvation, carbon storage use, drought-induced tree mortality, plant hydration},
	pages = {340--349},
}

@article{salmon_balancing_2015,
	title = {Balancing the risks of hydraulic failure and carbon starvation: a twig scale analysis in declining {Scots} pine},
